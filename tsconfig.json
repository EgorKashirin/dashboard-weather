{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "esnext",
    "target": "es6",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "components/*": ["./components/*"],
      "stores/*": ["./stores/*"],
      "containers/*": ["./containers/*"],
      "hooks/*": ["./hooks/*"],
      "helpers/*": ["./helpers/*"],
      "api/*": ["./api/*"],
      "layouts/*": ["./layouts/*"],
      "selectors/*": ["./selectors/*"],
      "constants/*": ["./constants/*"],
      "lib/*": ["./lib/*"]
    },
    "outDir": "./build/",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "composite": true,
    "noEmit": true,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "removeComments": true,
    "alwaysStrict": true,
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
  },
  "include": ["client.d.ts", "src/**/*.ts", "src/**/*.tsx", "stories/**/*"],
  "exclude": ["node_modules"]
}
